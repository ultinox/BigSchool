@model BigSchool.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Heading</h2>
@using (Html.BeginForm(Model.Action, "Courses"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Place) : @Html.DisplayFor(m => m.Place)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date) : @Html.DisplayFor(m => m.Date)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time) : @Html.DisplayFor(m => m.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Category) : @Html.DisplayFor(m => m.Category)
    </div>

}
